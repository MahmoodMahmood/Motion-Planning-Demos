    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch road_maker.html",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "file": "${workspaceFolder}/road_maker.html",
            "runtimeArgs": [
                " --allow-file-access-from-files",
            ],
        },
        {
            "preLaunchTask": "compile emcc",
            "name": "Launch slam.html",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/slam.html",
            "runtimeArgs": [
                "--disable-web-security"
             ],
        }
    ]
}